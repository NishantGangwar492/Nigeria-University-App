<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="newsitem"
            type="com.iotait.schoolapp.ui.homepage.ui.home.model.Datum" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/unnnewsbackground"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato_bold"
            android:singleLine="true"
            android:text="@{newsitem.getPostTitle()}"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"/>


        <TextView
            android:id="@+id/textoverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:id="@+id/Read_More"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/lato_regular"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/Read_more"
                android:textColor="#009245"
                android:textSize="@dimen/_12ssp">

            </TextView>

            <TextView
                android:id="@+id/dateLatestNews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:fontFamily="@font/lato_regular"
                android:gravity="end"
                android:maxLines="1"
                app:changeFormat="@{newsitem.getPostDate()}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp">

            </TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </View>


    </LinearLayout>
</layout>