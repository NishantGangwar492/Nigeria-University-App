<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_4sdp">

        <LinearLayout
            android:id="@+id/messageMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_message_background"
            android:minWidth="@dimen/_100sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/your_meessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_24sdp"
                android:maxWidth="@dimen/_240sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_24sdp"
                android:gravity="end"
                android:paddingBottom="4dp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/seen_ic_iv"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_toLeftOf="@id/messageMain"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toStartOf="@id/messageMain" />

    </RelativeLayout>
</layout>

