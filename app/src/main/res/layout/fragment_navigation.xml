<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        tools:context=".ui.homepage.ui.navigation.Navigation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_bar_back">

            <LinearLayout
                android:id="@+id/headerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userProfilePicture"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="@dimen/_2sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_person_add"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="1dp"/>
                        <TextView
                            android:id="@+id/package_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:textAllCaps="true"
                            android:background="@drawable/user_indicator_bg"
                            android:paddingStart="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_1sdp"
                            android:paddingTop="@dimen/_1sdp"
                            android:layout_toRightOf="@id/userProfilePicture"
                            android:layout_alignBottom="@id/userProfilePicture"
                            android:layout_marginStart="-20dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8ssp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="3.6"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp">

                        </TextView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_2sdp"/>

                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight=".5">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:src="@drawable/back">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
