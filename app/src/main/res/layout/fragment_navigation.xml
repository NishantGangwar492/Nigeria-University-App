                            <LinearLayout
                                android:id="@+id/schoolAnthem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/schoolanthem">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/schoolAnthem"
                                    android:textColor="@color/white"
                                    android:textSize="16sp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/openWhatsapp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:onClick="openWhatsapp"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/whatsapp_icon">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="Join WhatsApp Group"
                                    android:textColor="@color/white"
                                    android:textSize="16sp">

                                </TextView>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/questions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/questions">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/Questions2"
                                    android:textColor="@color/white"
                                    android:textSize="16sp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/unnNews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/unnnews">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/UNN_News"
                                    android:textColor="@color/white"
                                    android:textSize="16sp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/articals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/articales">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/Articles"
                                    android:textColor="@color/white"
                                    android:textSize="16sp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/takeExam"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/takeexam">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/Take_Exam2"
                                    android:textColor="@color/white"
                                    android:textSize="16sp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LeaderBoard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/leadericon">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
