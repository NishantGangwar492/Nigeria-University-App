<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="article"
            type="com.iotait.schoolapp.ui.homepage.ui.articals.articlemodel.ArticleModel" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:maxLines="2"
                android:padding="2dp"
                android:layout_margin="@dimen/_5sdp"
                android:text="@{article.getArticleTitle()}"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/txt_readmore"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/lato_regular"
                   android:gravity="start"
                   android:maxLines="1"
                   android:layout_margin="@dimen/_5sdp"
                   android:text="@string/Read_more"
                   android:textColor="#009245"
                   android:textSize="@dimen/_12ssp"/>
               <View
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
               <TextView
                   android:id="@+id/date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/lato_bold"
                   android:maxLines="2"
                   android:text="@{article.getArticlePublishedDate()}"
                   android:layout_gravity="end"
                   android:padding="2dp"
                   android:layout_margin="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_10ssp"/>
           </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>