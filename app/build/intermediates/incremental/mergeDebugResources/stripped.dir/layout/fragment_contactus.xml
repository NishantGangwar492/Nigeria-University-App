<?xml version="1.0" encoding="utf-8"?>
                                                            


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        tools:context=".ui.homepage.ui.contactus.ContactusFragment" android:tag="layout/fragment_contactus_0" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B2F7F7F7">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/toolbarbackground"
                    app:elevation="0dp"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/back"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:src="@drawable/ic_arrow_back_black_24dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:text="Contact Us"
                                android:textColor="@color/white"
                                android:textSize="16sp">

                            </TextView>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appBarLayout"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="@string/contact_h1"
                    android:textColor="@color/color_black"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="@string/contact_h2"
                    android:textColor="@color/color_black"
                    android:textIsSelectable="true"
                    android:textSize="16dp"

                    />

                <!--                <TextView-->

                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginStart="@dimen/_5sdp"-->
                <!--                    android:layout_marginTop="@dimen/_10sdp"-->
                <!--                    android:fontFamily="@font/lato_regular"-->
                <!--                    android:gravity="center"-->
                <!--                    android:textIsSelectable="true"-->
                <!--                    android:text="@string/Contact_Usdetails"-->
                <!--                    android:textColor="@color/color_black"-->
                <!--                    android:textSize="@dimen/_14sdp">-->

                <!--                </TextView>-->



                <Button
                    android:id="@+id/contactUpgrade"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/lato_bold"
                    android:padding="0dp"
                    android:text="@string/Upgrade_to_Premium"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
         